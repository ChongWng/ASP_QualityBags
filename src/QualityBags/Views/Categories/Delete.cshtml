@model QualityBags.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h3>@TempData["CategoryUsed"] </h3>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    @if (Model.Bags != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Bags)
                {
                    var imgUrl = @Href("~" + item.PathOfFile);
                    var errImg = @Href("~/Images/bag1.jpg");

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BagID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <img style="width: 100px; height: auto;" src="@imgUrl" alt="Bag Image" onerror="this.onerror = null; this.src = '@errImg'">
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a class="btn btn-default" asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
